name: Sync Vault to S3

on:
  push:
    paths:
      - '**/vault/**'  # This will trigger on any changes in folders containing 'vault'

jobs:
  sync-to-s3:
    runs-on: ubuntu-latest
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v3
        
      - name: Configure AWS credentials
        uses: aws-actions/configure-aws-credentials@v1
        with:
          aws-access-key-id: ${{ secrets.AWS_ACCESS_KEY_ID }}
          aws-secret-access-key: ${{ secrets.AWS_SECRET_ACCESS_KEY }}
          aws-region: ${{ secrets.AWS_REGION }}
          
      - name: Sync vault contents to S3
        run: |
          # Find all directories containing 'vault' and sync their contents
          for dir in $(find . -type d -name "*vault*"); do
            aws s3 sync $dir s3://${{ secrets.S3_BUCKET }}/${dir#./} \
              --delete \
              --exclude ".git/*" \
              --exclude ".github/*" \
              --exclude "**/.obsidian/*" \
              --exclude "**/.obsidian/**"
          done
